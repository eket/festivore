    script(src="/static/js/lib/jquery.min.js")
    script(src="/static/js/lib/bootstrap.js")
    script(src="/static/js/lib/leaflet.js")
    script(src="/static/js/lib/lodash.min.js")
    script(src="/static/js/lib/backbone-min.js")

    script(src="/static/js/script.js")
    script(src="/static/js/map.js")
    script(src="/static/js/friends.js")
    script(src="/static/js/places.js")

